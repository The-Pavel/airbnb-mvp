<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <h1>Flats</h1>
  </div>
  <div class="row">
    <div class="col col-xs-12 col-sm-6 col-sm-offset-3">
      <%= link_to 'New Flat', new_flat_path, class: "btn btn-primary" %>
    </div>
    <% @flats.each do |flat| %>
      <div class="col col-xs-12 col-sm-6 card">
        <%= image_tag(flat.image, class: "image") %>
        <%= link_to "GO TO FLAT", flat, class: "cta" %>
        <!-- <div class="cta">GO TO FLAT</div> -->
        <div class="details">
          <div class="name"><%= flat.name %></div>
          <div class="address"><%= flat.address %></div>
          <div class="descr"><%= flat.description %></div>
        </div>
        <div class="numbers">
          <div class="price">
            <i class="fas fa-euro-sign"></i>
            <div class="price"><%= flat.price_per_night %></div>
          </div>
          <div class="capacity">
            <div class="capacity"><%= flat.number_of_guests %></div>
            <i class="fas fa-bed"></i>
          </div>
        </div>
        <div class="controls">
          <%= link_to 'Show', flat %><%= link_to 'Edit', edit_flat_path(flat) %><%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
